---
name: regionserver

packages:
  - bosh-helpers
  - java
  - hbase

templates:
  bin/regionserver_ctl.erb: bin/regionserver_ctl
  bin/monit_debugger: bin/monit_debugger
  bin/job_properties.sh.erb: bin/job_properties.sh
  data/properties.sh.erb: data/properties.sh
  helpers/ctl_setup.sh: helpers/ctl_setup.sh
  helpers/ctl_utils.sh: helpers/ctl_utils.sh
  config/hbase-policy.xml: config/hbase-policy.xml
  config/hbase-env.sh: config/hbase-env.sh
  config/hbase-site.xml.erb: config/hbase-site.xml
  config/log4j.properties: config/log4j.properties
  config/regionservers.erb: config/regionservers

provides:
- name: regionserver
  type: regionserver
- name: hmaster
  type: hmaster

consumes:
- name: namenode
  type: namenode
  properties:
  - hadoop.namenode.port
- name: regionserver
  type: regionserver
- name: zookeeper
  type: zookeeper
  properties:
  - client_port

properties:
  zookeeper.servers:
    description: List of all zookeeper server host IP/hostnames
  hbase.master:
    description: Start HBase in master mode. Defaults to regionserver
    default: false
